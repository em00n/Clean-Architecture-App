<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CleanArchitectureApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ShapeableImageView_Customize" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopRight">17dp</item>
        <item name="cornerSizeTopLeft">17dp</item>
        <item name="cornerSizeBottomRight">17dp</item>
        <item name="cornerSizeBottomLeft">17dp</item>
    </style>

    <style name="TextView_16sp_White" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSize_16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView_14sp_Black" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize_14sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="TextView_16sp_Black_Bold" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize_16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>